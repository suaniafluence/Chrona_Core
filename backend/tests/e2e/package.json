{
  "name": "chrona-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Chrona backend and kiosk",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:api": "playwright test --project=api-tests",
    "test:kiosk": "playwright test --project=kiosk-chrome",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:5174"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "e2e",
    "playwright",
    "testing"
  ]
}
