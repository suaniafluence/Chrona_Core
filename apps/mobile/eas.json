{
  "cli": {
    "version": ">= 13.2.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "postInstallScript": "npm --prefix apps/mobile run patch-gradle"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "http://YOUR_SERVER_IP:8000",
        "EXPO_PUBLIC_ENV": "development"
      },
      "postInstallScript": "npm --prefix apps/mobile run patch-gradle"
    },
    "production": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://api.chrona.com",
        "EXPO_PUBLIC_ENV": "production"
      },
      "postInstallScript": "npm --prefix apps/mobile run patch-gradle"
    }
  },
  "submit": {
    "production": {}
  }
}
