# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# For local development (docker-compose.yml)
DOMAIN=localhost

# For AWS EC2 deployment - set to your instance IP or domain
# Example: EC2_HOST=13.37.245.222 or EC2_HOST=api.example.com
EC2_HOST=localhost
EC2_PORT=8000
BACKOFFICE_PORT=5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection (Docker Compose uses internal network)
DATABASE_URL=postgresql+asyncpg://chrona:chrona@db:5432/chrona
POSTGRES_DB=chrona
POSTGRES_USER=chrona
POSTGRES_PASSWORD=chrona

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# JWT signing keys (paths in container)
JWT_PRIVATE_KEY_PATH=/app/jwt_private_key.pem
JWT_PUBLIC_KEY_PATH=/app/jwt_public_key.pem

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Backend CORS - comma-separated list of allowed origins
# Local: http://localhost:5173,http://localhost:8000
# EC2: http://13.37.245.222:5173,http://13.37.245.222:8000
# Production: https://backoffice.example.com,https://api.example.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000

ALLOW_CREDENTIALS=false
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# Access token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Backoffice API URL (if not set, uses EC2_HOST:EC2_PORT)
# Examples:
#   Local: http://localhost:8000
#   EC2: http://13.37.245.222:8000
#   Production: https://api.example.com
VITE_API_URL=http://localhost:8000

# ============================================================================
# TRAEFIK CONFIGURATION (Optional - for HTTPS/SSL)
# ============================================================================

TRAEFIK_ACME_EMAIL=admin@example.com

# Backend security (enable only when HTTPS enforced)
ENABLE_HSTS=false

